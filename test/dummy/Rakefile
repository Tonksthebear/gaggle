# Add your own tasks in files placed in lib/tasks ending in .rake,
# for example lib/tasks/capistrano.rake, and they will automatically be available to Rake.

require_relative "config/application"

if Gem.loaded_specs.key?("sprockets-rails")
  Rails.application.load_tasks  # Full task load for Sprockets
else
  # Load only core tasks for Propshaft, avoiding asset-specific ones
  Rake.application.load_imports  # Loads lib/tasks/*.rake if any
end
