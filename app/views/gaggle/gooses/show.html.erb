<div class="max-w-2xl mx-auto p-6 bg-white shadow rounded-lg">
  <h1 class="text-3xl font-bold mb-4">Profile: <%= @goose.name %></h1>
  
  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-2">Prompt</h2>
    <p class="text-gray-700"><%= @goose.prompt.presence || "No additional information provided." %></p>
  </div>
  
  <div class="flex space-x-4">
    <%= link_to "Edit", edit_goose_path(@goose), class: yass(btn: :blue) %>
    <%= link_to "Session", goose_sessions_path(@goose), class: yass(btn: :gray) %>
  </div>

</div>
